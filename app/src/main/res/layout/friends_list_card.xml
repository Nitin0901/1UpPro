<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@null"
    app:cardCornerRadius="5dp"
    android:layout_margin="@dimen/margin_1.5x"
    app:cardElevation="@dimen/margin_2"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="@dimen/margin_0.5x"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nameid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensansregular"
            android:gravity="start"
            android:padding="@dimen/margin_0.5x"
            android:layout_marginStart="@dimen/margin_1x"
            android:layout_marginEnd="@dimen/margin_1x"
            android:textAlignment="textStart"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/usernameid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_0.5x"
            android:layout_marginStart="@dimen/margin_1x"
            android:layout_marginEnd="@dimen/margin_1x"
            android:fontFamily="@font/opensansregular"
            android:gravity="start"
            android:padding="@dimen/margin_0.5x"
            android:textAlignment="textStart"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameid" />

        <Button
            android:id="@+id/acceptreqbtn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/margin_15x"
            android:layout_height="wrap_content"
            android:background="@drawable/sendmessagebluebtn"
            android:fontFamily="@font/opensanssemibold"
            android:minHeight="0dp"
            android:visibility="gone"
            android:minWidth="0dp"
            android:padding="@dimen/margin_1x"
            android:layout_marginStart="@dimen/margin_1x"
            android:text="@string/accept_request"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usernameid" />

        <Button
            android:id="@+id/rejectreqbtn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/margin_15x"
            android:layout_height="wrap_content"
            android:background="@drawable/sendmessagebluebtn"
            android:fontFamily="@font/opensanssemibold"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:visibility="gone"
            android:padding="@dimen/margin_1x"
            android:text="@string/wuss_out"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/acceptreqbtn"
            app:layout_constraintTop_toBottomOf="@+id/usernameid" />

        <Button
            android:id="@+id/viewprofilebtn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/margin_15x"
            android:layout_height="wrap_content"
            android:background="@drawable/sendmessagebluebtn"
            android:fontFamily="@font/opensanssemibold"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="@dimen/margin_1x"
            android:visibility="gone"
            android:layout_marginStart="@dimen/margin_1x"
            android:text="@string/view_profile"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usernameid" />

        <Button
            android:id="@+id/sendmsgbtn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/margin_15x"
            android:layout_height="wrap_content"
            android:background="@drawable/sendmessagebluebtn"
            android:fontFamily="@font/opensanssemibold"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:visibility="gone"
            android:padding="@dimen/margin_1x"
            android:text="@string/send_message"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/viewprofilebtn"
            app:layout_constraintTop_toBottomOf="@+id/usernameid" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>