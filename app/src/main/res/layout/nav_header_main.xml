<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/bgtheme"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:id="@+id/nav_header_layout"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userimageid"
        android:layout_width="@dimen/margin_9x"
        android:layout_height="@dimen/margin_9x"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_2x"
        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="@dimen/nav_header_vertical_spacing"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_1x"
        android:visibility="invisible"
        android:id="@+id/usernameid"
        android:layout_gravity="center"
        android:padding="@dimen/margin_0.5x"
        android:paddingStart="@dimen/margin_2x"
        android:paddingEnd="@dimen/margin_2x"
        android:textColor="@color/textview_white_color"
        android:fontFamily="@font/opensanssemibold"
        android:background="@drawable/whiteboxborder"
        android:textAlignment="center"/>

</LinearLayout>
